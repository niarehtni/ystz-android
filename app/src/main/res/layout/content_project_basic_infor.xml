<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cn.ysgroup.ysdai.Activities.ProjectBasicInforActivity"
    tools:showIn="@layout/activity_project_basic_infor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="债务人信息"
                android:textColor="@color/colorLightBlack"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/project_basic_infor_debt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="#999999"
                android:textSize="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginRight="20dp"
                android:background="#5f5f5f" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="项目描述"
                android:textColor="@color/colorLightBlack"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/project_basic_infor_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="#999999"
                android:textSize="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginRight="20dp"
                android:background="#5f5f5f" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="资金用途"
                android:textColor="@color/colorLightBlack"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/project_basic_infor_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="#999999"
                android:textSize="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginRight="20dp"
                android:background="#5f5f5f" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="还款来源"
                android:textColor="@color/colorLightBlack"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/project_basic_infor_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="#999999"
                android:textSize="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginRight="20dp"
                android:background="#5f5f5f" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:paddingBottom="10dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="还款计划"
                android:textColor="@color/colorLightBlack"
                android:textSize="14dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:weightSum="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="期数"
                    android:textColor="@color/colorDarkBlack"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="还款日期"
                    android:textColor="@color/colorDarkBlack"
                    android:textSize="12dp" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="还款本金"
                    android:textColor="@color/colorDarkBlack"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="还款利息"
                    android:textColor="@color/colorDarkBlack"
                    android:textSize="12dp" />

            </LinearLayout>

            <cn.ysgroup.ysdai.UI.NoScrollListView
                android:id="@+id/project_repayment_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/colorWhite"
                android:divider="#DDDDDD"
                android:dividerHeight="1dp"
                android:scrollbars="none"
                android:transcriptMode="normal">

            </cn.ysgroup.ysdai.UI.NoScrollListView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/colorTextHint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:weightSum="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="小计"
                    android:textColor="@color/colorBlack"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/project_repayment_total_capital"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorRed"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/project_repayment_total_interest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorRed"
                    android:textSize="13dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/colorTextHint" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>
